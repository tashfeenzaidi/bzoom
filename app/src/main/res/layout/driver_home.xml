    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/top_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp">
            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,2,4"
                android:shrinkColumns="1,3"
                >
                <TableRow
                    android:id="@+id/row1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/rides"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/roboto"
                            android:text="0"
                            android:textSize="@dimen/_24sdp" />

                        <TextView
                            android:id="@+id/number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rides"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="TOTAL RIDES"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp" />




                    </RelativeLayout>
                    <View
                        android:id="@+id/divider1"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/hours"
                        android:background="@color/common_google_signin_btn_text_light_disabled" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/months"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/roboto"
                            android:text="0"
                            android:textSize="@dimen/_24sdp" />

                        <TextView
                            android:id="@+id/month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/months"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="MONTHS"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp" />

                        />
                    </RelativeLayout>
                    <View
                        android:id="@+id/divider2"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/hours"
                        android:background="@color/common_google_signin_btn_text_light_disabled" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/reviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/roboto"
                            android:text="0"
                            android:textSize="@dimen/_24sdp" />

                        <TextView
                            android:id="@+id/review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/reviews"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="REVIEWS"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp" />

                        />
                    </RelativeLayout>

                </TableRow>
            </TableLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_1"
            android:layout_marginTop="@dimen/_30sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_293sdp"
                android:layout_height="@dimen/_263sdp"
                android:layout_centerHorizontal="true"
                app:cardElevation="@dimen/_3sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/today"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:textSize="@dimen/_14sdp"
                        android:text="Today"
                        android:textColor="@android:color/white"
                        android:background="#7A7A7A"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textAlignment="center"

                        />
                    <ImageView
                        android:id="@+id/coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/coin"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/today"
                        android:layout_marginTop="@dimen/_35sdp"
                        />

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_32sdp"
                        android:text="0PKR"
                        android:textColor="@color/headingColor"
                        android:fontFamily="@font/roboto"
                        android:layout_below="@+id/coin"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_18sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:text="MONEY EARNED"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/ubuntu_bold"
                        android:layout_below="@+id/money"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_3sdp"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>