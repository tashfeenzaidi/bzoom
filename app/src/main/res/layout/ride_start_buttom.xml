<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:id="@+id/buttom_ride_start">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="@dimen/_27sdp"
        app:srcCompat="@drawable/pin" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_23sdp"
        android:layout_toEndOf="@+id/imageView4"
        android:fontFamily="@font/roboto_bold"
        android:text="Defence phase VII, near Chai Shai"
        android:textColor="@color/textColor"
        android:textSize="@dimen/_13sdp"
         />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/roboto"
        android:text="arrival time: 13:25"
        android:textColor="@color/subtextColor"
        android:textSize="@dimen/_8sdp"
        android:layout_toEndOf="@+id/imageView4"
        android:visibility="invisible"/>

    <View
        android:id="@+id/view_firstName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="6dp"
        android:background="@color/dividerColor" />

    <Button
        android:id="@+id/view_peofile"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_52sdp"
        android:layout_below="@+id/view_firstName"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_13sdp"
        android:background="@drawable/btn_style"
        android:fontFamily="@font/ubuntu_bold_sec"
        android:text="View profile"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_16sdp" />

</RelativeLayout>